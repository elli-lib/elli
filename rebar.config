{erl_first_files, ["src/elli_handler.erl"]}.
{erl_opts, [debug_info,
            {i, "include"}]}.
{minimum_otp_vsn, "24"}.
{deps, []}.
{xref_checks, [deprecated_function_calls,undefined_function_calls,locals_not_used]}.
{profiles, [
  {test, [
    {deps,      [{hackney, "1.20.1"}]},
    {extra_src_dirs, [
        {"test", [
            {recursive, true}
        ]}
    ]},
    {cover_enabled, true},
    {cover_export_enabled, true},
    {cover_excl_mods, [
      elli_handler
    ]},
    {covertool, [{coverdata_files, ["ct.coverdata"]}]},
    {cover_opts, [verbose]},
    {ct_opts, [{ct_hooks, [cth_surefire]}]}
  ]}
]}.

{shell, [{script_file, "bin/shell.escript"}]}.

{project_plugins, [
  {covertool, "2.0.6"},
  {rebar3_lint, "3.2.5"}
  {rebar3_ex_doc, "0.2.23"}
]}.
{ex_doc, [
    {extras, [
        "README.md",
        "OVERVIEW.md",
        "CHANGELOG.md",
        "LICENSE"
    ]},
    {main, "README.md"},
    {source_url, "https://github.com/elli-lib/elli"}
]}.
{hex, [
    {doc, #{provider => ex_doc}}
]}.

{provider_hooks, [{pre, [{eunit, lint}]}]}.
{dialyzer, [{plt_extra_apps, [ssl]}, {warnings, [unknown]}]}.
